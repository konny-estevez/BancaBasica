}

<h1>Eliminar</h1>

<h3>Estás seguro que deseas eliminar este Movimiento?</h3>
<div>
    <h4>Movimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cuenta.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cuenta.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EsCredito)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsCredito)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActualizadoEn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActualizadoEn)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Regresar</a>
    </form>
</div>
