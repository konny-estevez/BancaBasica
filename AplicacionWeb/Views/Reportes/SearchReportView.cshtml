@model AplicacionWeb.Models.ReporteViewModel

@{
    ViewData["Title"] = "ReportView";
}

<h1>Consulta Estados de Cuenta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="find=ByFechaBetween" method="get">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label"></label>
                <select asp-for="IdCliente" class="form-control" asp-items="@ViewBag.Clientes" name="idClient"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
                <label asp-for="FechaDesde" class="control-label"></label>
                <input type="date" asp-for="FechaDesde" class="form-control" name="from"/>
                <span asp-validation-for="FechaDesde" class="text-danger"></span>
                <label asp-for="FechaHasta" class="control-label"></label>
                <input type="date" asp-for="FechaHasta" class="form-control" name="to"/>
                <span asp-validation-for="FechaHasta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
